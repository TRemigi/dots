#!/usr/bin/env bash

session=$(find ~ ~/dev/ ~/hack/ ~/dev/personal ~/dev/lendio-infra/ ~/dev/lendio-infra/repositories/ ~/dev/lendio-mobile-infra ~/dev/lendio-mobile-infra/repositories/ -mindepth 1 -maxdepth 1 -type d | fzf)
session_name=$(basename "$session" | tr . _)

if ! tmux has-session -t "$session_name"; then
  tmux new-session -s "$session_name" -c "$session" -d
fi

clients=$(tmux list-clients)

if [ -z "${clients}" ]; then
  echo "tmux attach-session -t \"$session_name"\"
  tmux attach-session -t "$session_name"
else
  "tmux switch-client -t \"$session_name\""
  tmux switch-client -t "$session_name"
fi

